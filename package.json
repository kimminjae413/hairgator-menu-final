{
  "name": "hairgator-gpt-image-system",
  "version": "3.1.0",
  "description": "HAIRGATOR Professional Hair Style Menu with GPT Image 1 Face-Preserve AI Experience",
  "main": "index.html",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.7",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0"
  },
  "scripts": {
    "start": "netlify dev",
    "build": "echo 'Static site - no build needed'",
    "deploy": "netlify deploy --prod",
    "dev": "netlify dev",
    "functions:serve": "netlify functions:serve",
    "test:functions": "netlify functions:invoke openai-proxy --payload '{\"method\":\"test\"}'",
    "test:generate": "netlify functions:invoke openai-proxy --payload '{\"method\":\"generate\",\"prompt\":\"Professional portrait with modern hairstyle\",\"quality\":\"high\"}'",
    "test:edit": "netlify functions:invoke openai-proxy --payload '{\"method\":\"edit\",\"prompt\":\"Transform hairstyle while preserving facial features\",\"image\":\"data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mP8/5+hHgAHggJ/PchI7wAAAABJRU5ErkJggg==\",\"input_fidelity\":\"high\"}'",
    "test:face-preserve": "netlify functions:invoke openai-proxy --payload '{\"method\":\"edit\",\"prompt\":\"Change only the hairstyle, keep face identical\",\"input_fidelity\":\"high\",\"quality\":\"high\"}'"
  },
  "keywords": [
    "hairgator",
    "hair-styling",
    "ai-experience",
    "gpt-image-1",
    "face-preserve",
    "input-fidelity",
    "hair-simulation",
    "salon-menu",
    "beauty-tech",
    "korean-beauty",
    "image-editing",
    "facial-preservation"
  ],
  "author": "HAIRGATOR Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hairgator/hairgator-system.git"
  },
  "netlify": {
    "functions": "netlify/functions",
    "publish": ".",
    "build": {
      "environment": {
        "NODE_VERSION": "18"
      }
    },
    "redirects": [
      {
        "from": "/api/*",
        "to": "/.netlify/functions/:splat",
        "status": 200
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "files": [
    "index.html",
    "css/**/*",
    "js/**/*",
    "icons/**/*",
    "personal-color/**/*",
    "netlify/functions/**/*",
    "manifest.json",
    "_headers",
    "_redirects"
  ],
  "config": {
    "gpt": {
      "mode": "face-preserve",
      "model": "gpt-image-1",
      "input_fidelity": "high",
      "defaultSize": "1024x1024",
      "defaultQuality": "high",
      "maxRetries": 3,
      "timeout": 90000,
      "features": {
        "edit_mode": true,
        "generate_mode": true,
        "mask_support": true,
        "face_preservation": true
      }
    }
  }
}
